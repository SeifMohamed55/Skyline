@*part of the bigger model dynamic model*@

@{
    Department department = ViewBag.CurrentDept;
}
<div class="row">
    <dl class="col-6 row">
        @*html helper outside tag*@
        <dt class="col-2">@Html.DisplayNameFor(d=> department.Id) </dt>
        <dd class="col-10">@Html.DisplayFor(d => department.Id) | @Model.Id</dd>
        @*<dd class="col-10">@Model.Id</dd>*@

        <dt class="col-2">@Html.DisplayNameFor(d=> department.Name)</dt>
        <dd class="col-10">@Html.DisplayFor(d => department.Name) | @Model.Name</dd>
        @*    <dd class="col-10">@Model.Name</dd>
        *@
        <dt class="col-2">@Html.DisplayNameFor(d=> department.Description)</dt>
        <dd class="col-10">@Html.DisplayFor(d => department.Description) | @Model.Description</dd>
        @*    <dd class="col-10">@Model.Description</dd>
        *@
        <dt class="col-2">@Html.DisplayNameFor(d=> department.AnnualBudget)t</dt>
        <dd class="col-10">@Html.DisplayFor(d => department.AnnualBudget) | @Model.AnnualBudget</dd>
        @*    <dd class="col-10">@Model.AnnualBudget</dd>
        *@
        <dt class="col-2">@Html.DisplayNameFor(d=> department.StartDate)</dt>
        <dd class="col-10">@Html.DisplayFor(d => department.StartDate) | @Model.StartDate</dd>
        @*    <dd class="col-10">@Model.StartDate.ToShortDateString()</dd>
        *@
        <dt class="col-2">@Html.DisplayNameFor(d=> department.IsActive)</dt>
        <dd class="col-10">@Html.DisplayFor(d => department.IsActive) | @Model.IsActive</dd>
        @*    <dd class="col-10">@Model.IsActive</dd>
        *@
    </dl>
    <img src="@Model.ImagePath" class="card col-6" style="object-fit:contain">

</div>
<ul class="col-4 list-group">
    <li class="list-group-item active">Employees</li>
    @if (department.Employees.Count > 0)
    {
        @foreach (var emp in department.Employees)
        {
            @*tag helper (inside tag) , tag dependent*@
            <a asp-controller="Employees" asp-action="GetDetailsView" asp-route-id="@emp.Id" style="text-decoration:none">
            <li class="list-group-item list-group-item-action">@emp.FullName (@emp.Position)</li>
            </a>
        }

    }
    else
    {
        <li class="alert alert-danger text-center">There is no employees to display!</li>

    }


</ul>